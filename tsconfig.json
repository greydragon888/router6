{
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vitest/globals"],
    "paths": {
      "router5": ["packages/router5/modules/index.ts"],
      "router5-helpers": ["packages/router5-helpers/modules/index.ts"],
      "router5-plugin-browser": ["packages/router5-plugin-browser/modules/index.ts"],
      "router5-plugin-listeners": ["packages/router5-plugin-listeners/modules/index.ts"],
      "router5-plugin-logger": ["packages/router5-plugin-logger/modules/index.ts"],
      "router5-plugin-persistent-params": ["packages/router5-plugin-persistent-params/modules/index.ts"],
      "router5-transition-path": ["packages/router5-transition-path/modules/index.ts"],
      "react-router5": ["packages/react-router5/modules/index.ts"]
    },
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "packages/*/dist",
  ]
}
